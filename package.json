{
  "name": "tempus-productivity-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run next:dev\" \"npm run electron:dev\"",
    "next:dev": "next dev",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "package": "electron-builder",
    "dist": "npm run build && npm run package"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tempus.productivity",
    "productName": "Tempus Productivity Dashboard",
    "files": [
      "out/**/*",
      "main.js",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  }
}
