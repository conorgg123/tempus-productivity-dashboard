{
  "name": "next-productivity-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export -o out",
    "build-static": "next build && next export -o out",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 -t 60000 && electron .\"",
    "dist": "npm run build-static && electron-builder",
    "package": "electron-builder build --win --publish never",
    "pack-win": "electron-builder --win --dir",
    "dist-win": "electron-builder --win"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "date-fns": "^4.1.0",
    "next": "11.1.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "^6.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.3.7",
    "concurrently": "^6.5.1",
    "electron": "^13.6.9",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.19",
    "typescript": "^5",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.yourcompany.productivity-dashboard",
    "productName": "Productivity Dashboard",
    "files": [
      "out/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/favicon.ico"
    }
  }
}
