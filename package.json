{
  "name": "next-productivity-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export -o out",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "npx concurrently \"npm run dev\" \"npx wait-on http://localhost:3000 http://localhost:3001 http://localhost:3002 http://localhost:3003 http://localhost:3004 http://localhost:3005 http://localhost:3006 -t 120000 && npx electron .\"",
    "dist": "npm run build && electron-builder",
    "package": "electron-builder build --win --publish never",
    "pack-win": "electron-builder --win --dir",
    "dist-win": "electron-builder --win"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "date-fns": "^4.1.0",
    "next": "^12.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.22.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.productivity-dashboard",
    "productName": "Productivity Dashboard",
    "files": [
      "out/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/favicon.ico"
    }
  }
}
