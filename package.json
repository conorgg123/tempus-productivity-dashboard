{
  "name": "tempus-productivity",
  "productName": "Tempus Productivity",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run next:dev\" \"npm run electron:dev\"",
    "next:dev": "next dev",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build": "next build && next export -o out",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "package": "electron-builder build --publish never",
    "dist": "npm run build && npm run package"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "electron-is-dev": "^2.0.0",
    "next": "13.4.12",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "eslint": "^8.46.0",
    "eslint-config-next": "13.4.12",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.tempus.productivity",
    "productName": "Tempus Productivity",
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icons/win/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/mac/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/png/512x512.png"
    }
  }
}
